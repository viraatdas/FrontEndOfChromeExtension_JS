{
    "name": "News Scan",
    "version": "0.1",
    "description": "Scan the web for other news articles relating to the one you have!",
    "background": {
	"scripts": ["background.js"],
	"persistent": false
    },
    "browser_action": {
	"default_popup": "popup.html",
	"default_title": "News Scan"
    },
    "icons": { "16": "img/size@16.png",
	       "24": "img/size@24.png",
	       "32": "img/size@32.png",
	       "64": "img/size@64.png",
	       "128": "img/size@128.png"
    },
    "permissions": [
	"activeTab",
	"tabs",
    	"http://*/*",
    	"https://*/",
      "http://127.0.0.1:5000/"
    ],
    "manifest_version": 2
}
